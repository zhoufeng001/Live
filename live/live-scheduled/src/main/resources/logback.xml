<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
	
  <property name="log.level"  value="INFO" />
  <property name="log.dir"  value="D:/live_logs/fas" />

  <!-- 控制台打印 -->
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">   
       <level>${log.level}</level>   
    </filter>  
    <encoder>
      <pattern>%msg%n</pattern>
    </encoder>
  </appender>
  
  <!-- 记录项目所有日志 -->
  <appender name="liveRmiAll" class="ch.qos.logback.core.rolling.RollingFileAppender">
  		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">   
	       <level>${log.level}</level>   
	    </filter>
        <file>${log.dir}/fas.log</file>
		<encoder>
		       <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger[%line] - %msg%n</pattern>
		</encoder>
	    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
              <FileNamePattern>${log.dir}/back/fas.%d{yyyy-MM-dd}.log</FileNamePattern>
              <MaxHistory>30</MaxHistory>
        </rollingPolicy>
   </appender>
   
   <!-- 记录项目ERROR级别文件 -->
   <appender name="liveRmiError" class="ch.qos.logback.core.rolling.RollingFileAppender">
		 <filter class="ch.qos.logback.classic.filter.ThresholdFilter">   
	       <level>ERROR</level>   
	    </filter>  
        <file>${log.dir}/fas-error.log</file>
		<encoder>
		       <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger[%line] - %msg%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
             <FileNamePattern>${log.dir}/back/fas-error.%d{yyyy-MM-dd}.log</FileNamePattern>
             <MaxHistory>30</MaxHistory>
        </rollingPolicy>
   </appender>
   
   <!-- 只输出ERROR级别及以上的日志 -->
   <logger name="org.apache.http.client.protocol" level="ERROR" />
   
  <root level="INFO">
    <appender-ref ref="console" />
    <appender-ref ref="liveRmiAll" />
    <appender-ref ref="liveRmiError" />
  </root>
  
  
</configuration>