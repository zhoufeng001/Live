<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zf.live.dao.mapper.LvuserMapperExt" >
  <!--
  用于扩展com.zf.live.dao.mapper.LvuserMapper接口
可通过com.zf.live.dao.mapper.LvuserMapper.BaseResultMap 
和com.zf.live.dao.mapper.LvuserMapper.Base_Column_List对其进行引用
by is_zhoufeng@163.com 2014-12-15 17:32:50.
  -->
  
   <select id="selectRandom"  resultMap="com.zf.live.dao.mapper.LvuserMapper.BaseResultMap">
  	select 
  	<include refid="com.zf.live.dao.mapper.LvuserMapper.BaseResultMap" />
  	from `lvuser`
  	order by RAND() limit 1; 
  </select>
  
  
    
  <select id="countLoginname" resultType="java.lang.Integer">
  	select count(*)
  	from `lvuser`
  	where loginname =  #{loginname,jdbcType=VARCHAR} limit 1 
  </select>
  
  <select id="countIdxcode" resultType="java.lang.Integer">
  	select count(*)
  	from `lvuser`
  	where idxcode = #{idxcode,jdbcType=VARCHAR} limit 1 
  </select>
  
  <select id="countMail" resultType="java.lang.Integer">
  	select count(*)
  	from `lvuser`
  	where idxcode =  #{mail,jdbcType=VARCHAR} limit 1 
  </select>
  
</mapper>