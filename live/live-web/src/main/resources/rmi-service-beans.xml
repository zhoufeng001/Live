<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
                           http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">
	
	<context:property-placeholder location="classpath*:app-env.properties" />
		
	<bean id="lvuserService" class="com.zf.live.common.hessian.ZFHessianProxyFactory">
	    <property name="serviceName" value="lvuserService"/>
	    <property name="serviceInterface" value="com.zf.live.client.user.LvuserService"/>
	</bean>
			
	<bean id="localVideoService" class="com.zf.live.common.hessian.ZFHessianProxyFactory">
	    <property name="serviceName" value="localVideoService"/>
	    <property name="serviceInterface" value="com.zf.live.client.video.local.LocalVideoService"/>
	</bean>
			
	<bean id="youkuVideoSearchService" class="com.zf.live.common.hessian.ZFHessianProxyFactory">
	    <property name="serviceName" value="youkuVideoSearchService"/>
	    <property name="serviceInterface" value="com.zf.live.client.video.youku.service.YoukuVideoSearchService"/>
	</bean>
			
	<bean id="youkuFetchVideoAndSaveService" class="com.zf.live.common.hessian.ZFHessianProxyFactory">
	    <property name="serviceName" value="youkuFetchVideoAndSaveService"/>
	    <property name="serviceInterface" value="com.zf.live.client.video.FetchVideosAndSaveService"/>
	</bean>

	<bean id="roomService" class="com.zf.live.common.hessian.ZFHessianProxyFactory">
	    <property name="serviceName" value="roomService"/>
	    <property name="serviceInterface" value="com.zf.live.client.room.RoomService"/>
	</bean>
	
</beans>
