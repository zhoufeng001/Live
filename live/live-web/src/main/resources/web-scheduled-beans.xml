<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context" 
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
						   http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.1.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
                           http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">


	<!-- 将缓存视频清除并更新到DB job -->
	<bean id="clearAndSaveCacheVideoToDbJob"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<!-- 调用的类 -->
		<property name="targetObject">
			<ref bean="clearAndSaveCachedVideoDetailInfoTask" />
		</property>
		<!-- 调用类中的方法 -->
		<property name="targetMethod">
			<value>clearAndSave</value>
		</property>
	</bean>

	<!-- 将缓存视频清除并更新到DB  -->
	<bean id="clearAndSaveCacheVideoToDbTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="clearAndSaveCacheVideoToDbJob" />
		</property>
		<!-- cron表达式 -->
		<property name="cronExpression">
			<value>0 0/10 * * * ?</value> <!-- 10分钟执行一次 -->
		</property>
	</bean>

	<!-- 重新缓存分类置顶视频Job -->
	<bean id="reCacheCategoryRecommendTopVideoJob"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<!-- 调用的类 -->
		<property name="targetObject">
			<ref bean="recacheCategoryRecommendTopVideoTask" />
		</property>
		<!-- 调用类中的方法 -->
		<property name="targetMethod">
			<value>reCache</value>
		</property>
	</bean>

	<!-- 重新缓存分类置顶视频Trigger  -->
	<bean id="reCacheCategoryRecommendTopVideoTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="reCacheCategoryRecommendTopVideoJob" />
		</property>
		<!-- cron表达式 -->
		<property name="cronExpression">
			<value>0 0/10 * * * ?</value> <!-- 10分钟执行一次 -->
		</property>
	</bean>
	
	<!-- 总管理类 如果将lazy-init='false'那么容器启动就会执行调度程序 -->
	<bean id="startQuertz" lazy-init="false" autowire="no"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers"> 
			<list>
				<ref bean="clearAndSaveCacheVideoToDbTrigger" />
				<ref bean="reCacheCategoryRecommendTopVideoTrigger" />
			</list>
		</property>
	</bean>

</beans>
