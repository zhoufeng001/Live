<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="true">
<!-- <configuration scan="false" scanPeriod="60 seconds" debug="false"> -->

  <property name="log.level"  value="INFO" />
  <property name="log.dir"  value="D:/live_logs/web" />
	
  <!-- 控制台打印 -->
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">   
       <level>${log.level}</level>   
    </filter>  
    <encoder>
      <pattern>%d{HH:mm:ss} %-5level %logger[%line] - %msg%n</pattern>
    </encoder>
  </appender>
  
  <!-- 记录项目所有日志 -->
  <appender name="liveWebAll" class="ch.qos.logback.core.rolling.RollingFileAppender">
  		 <filter class="ch.qos.logback.classic.filter.ThresholdFilter">   
	       <level>${log.level}</level>   
	    </filter>  
        <file>${log.dir}/live-web.log</file>
		<encoder>
		       <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger[%line] - %msg%n</pattern>
		</encoder>
	    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
              <FileNamePattern>${log.dir}/back/live-web.%d{yyyy-MM-dd}.log</FileNamePattern>
              <MaxHistory>30</MaxHistory>
        </rollingPolicy>
   </appender>
   
   <!-- 记录项目ERROR级别文件 -->
   <appender name="liveWebError" class="ch.qos.logback.core.rolling.RollingFileAppender">
		 <filter class="ch.qos.logback.classic.filter.ThresholdFilter">   
	       <level>ERROR</level>   
	    </filter>  
        <file>${log.dir}/live-web-error.log</file>
		<encoder>
		       <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger[%line] - %msg%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
             <FileNamePattern>${log.dir}/back/live-web-error.%d{yyyy-MM-dd}.log</FileNamePattern>
             <MaxHistory>30</MaxHistory>
        </rollingPolicy>
   </appender>
   
  <root level="debug">
    <appender-ref ref="console" />
    <appender-ref ref="liveWebAll" />
    <appender-ref ref="liveWebError" />
  </root>
  
  
</configuration>